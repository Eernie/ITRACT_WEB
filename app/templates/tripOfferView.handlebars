<div class="row" data-error-style="inline">
    <div class="span12">
        <div class="well">
            <div class="">
                <h3>Enter a trip offer</h3>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label" for="from">From</label>
                        <div class="controls input-append">
                            <input type="text" name="originAddress" data-error-style="inline" id="from" placeholder="Enter your start location">
                            <button class="btn" id="origin-geolocation" type="button"><i class="icon-map-marker"></i></button>
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label" for="to">To</label>
                        <div class="controls input-append">
                            <input type="text" name="originAddress" data-error-style="inline" id="to" placeholder="Enter your start location">
                            <button class="btn" id="destination-geolocation" type="button"><i class="icon-map-marker"></i></button>
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="control-group">
                        <label class="control-label" for="time">Time</label>
                        <div class="input-append bootstrap-timepicker-component">
                            <input type="text" name="time" id="time" readonly="readonly" class="input-small timepicker-default">
                            <span class="add-on">
                                <i class="icon-time"></i>
                            </span>
                        </div>
                        <div class="form-inline">
                            <label class="radio">
                                <input type="radio" name="optionsRadios" id="departure-time" value="departure-time" checked>
                                Departure
                            </label>
                            <label class="radio">
                                <input type="radio" name="optionsRadios" id="arrival-time" value="arrival-time">
                                Arrival
                            </label>
                        </div>
                    </div>
                </div>
                <div class="control-group pull-right">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary" id="trip-offer-submit">Submit</button>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="modal hide fade" id="offerAdded">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Trip offer added</h3>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>