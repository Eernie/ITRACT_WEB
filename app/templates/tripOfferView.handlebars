<div class="row" data-error-style="inline">
    <div class="span12">
        <div class="well">
            <div class="">
                <h3>Enter a trip offer</h3>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label" for="from">From</label>
                        <div class="controls">
                            <input type="text" name="offerOriginAddress" data-error-style="inline" id="from" placeholder="Enter your start location">
                        </div>
                    </div>
                </div>
                <div class="span4">
                    <div class="control-group">
                        <label class="control-label" for="to">To</label>
                        <div class="controls">
                            <input type="text" name="offerDestinationAddress" data-error-style="inline" id="to" placeholder="Enter your end location">
                        </div>
                    </div>
                </div>
                <div class="span3">
                    <div class="control-group">
                        <label class="control-label" for="time">Departure Time</label>
                        <div class="input-append bootstrap-timepicker-component">
                            <input type="text" name="time" id="offer-departure-time" readonly="readonly" class="input-small timepicker-default">
                            <span class="add-on">
                                <i class="icon-time"></i>
                            </span>
                        </div>
                        <label class="control-label" for="time">Arrival Time</label>
                        <div class="input-append bootstrap-timepicker-component">
                            <input type="text" name="time" id="offer-arrival-time" readonly="readonly" class="input-small timepicker-default">
                            <span class="add-on">
                                <i class="icon-time"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="control-group pull-right">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary" id="trip-offer-submit">Submit</button>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<div class="modal hide fade" id="offerAdded">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3>Trip offer added</h3>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">Close</button>
    </div>
</div>