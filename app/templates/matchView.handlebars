<div class="well">
  <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      {{#each matches}}  
        <li><a href="#match{{matchId}}" data-toggle="tab">

          From {{offerOriginAddress}} 
          {{#if offerStartTimeMin}}
             {{dateFormatTimeOnly offerStartTimeMin}}
          {{/if}}
          <br>
          To {{offerDestinationAddress}} 
          {{#if offerEndTimeMin}}
            {{dateFormatTimeOnly offerEndTimeMin}}
          {{/if}}
          </a></li>
      {{/each}}
    </ul>
    <div class="tab-content">
      {{#each matches}}
        <div class="tab-pane fade" id="match{{matchId}}">
          <p>
            <table class="table table-striped table-hover table-bordered">
              <tr>
                <td>User</td><td>{{offerUser}}</td>
              </tr>
              <tr>
                <td>User</td><td>{{offerUser}}</td>
              </tr>
              <tr>
                <td>Status</td><td>{{capitalize offerState}}</td>
              </tr>
            </table>
            <button class="btn btn-primary pull-right apply-join" id="{{matchId}}">Join</button>
          </p>
        </div>
      {{/each}}
    </div>
  </div>
</div>