<div class="well">
  <div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs">
      {{#each matches}}  
        <li><a href="#match{{match_id}}" data-toggle="tab">

          From {{offer_origin}} 
          {{#if offer_start_time_min}}
             {{dateFormatTimeOnly offer_start_time_min}}
          {{/if}}
          <br>
          To {{offer_destination}} 
          {{#if offer_end_time_min}}
            {{dateFormatTimeOnly offer_end_time_min}}
          {{/if}}
          </a></li>
      {{/each}}
    </ul>
    <div class="tab-content">
      {{#each matches}}
        <div class="tab-pane fade" id="match{{match_id}}">
          <p>
            <table class="table table-striped table-hover table-bordered">
              <tr>
                <td>User</td><td>{{offer_user}}</td>
              </tr>
              <tr>
                <td>User</td><td>{{offer_user}}</td>
              </tr>
              <tr>
                <td>Status</td><td>{{offer_state}}</td>
              </tr>
            </table>
            <button class="btn btn-primary pull-right">Join</button>
          </p>
        </div>
      {{/each}}
    </div>
  </div>
</div>