<h4>My offers</h4>
<div class="tabbable tabs-left"> <!-- Only required for left/right tabs -->
    <ul class="nav nav-tabs span4">
        {{#each tripOfferCollection}}
            <li id="offer_{{this.id}}">
                <a data-toggle="tab" class="offerTab">
                    <span class="badge badge-info">{{dateFormatTimeOnly this.startTimeMin}}</span>
                    {{this.originAddress}}<br> 
                    <span class="badge badge-info">{{dateFormatTimeOnly this.endTimeMax}}</span>
                    {{this.destinationAddress}}
                    <div class="disclosure pull-right"></div>
                </a>
            </li>
        {{else}}
            No trip offers found
        {{/each}}
    </ul>
</div>